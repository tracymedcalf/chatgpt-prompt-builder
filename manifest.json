{
    "manifest_version": 3,
    "name": "Generate Upwork Cover Letter",
    "version": "1.0",

    "description": "Uses ChatGPT to write a cover letter for Upwork",
    "icons": {
        "48": "icons/pen.svg",
        "96": "icons/pen.svg"
    },

    "content_scripts": [
        {
            "js": ["content_scripts/content.js"],
            "matches": ["<all_urls>", "*://*.upwork.com/*"]
        }
    ],

    "permissions": [
        "activeTab",
        "contextMenus",
        "cookies",
        "scripting",
        "storage"
    ],

    "action": {
        "default_popup": "popup/popup.html"
    }
}
